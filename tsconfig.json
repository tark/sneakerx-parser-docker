{
  "compilerOptions": {
    "declaration": false,
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "rootDir": ".",
    "outDir": "./build"
  },
  "files": [
    "src/index.ts"
  ],
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
